<Window x:Class="WpfApp.WindowCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="WindowCompany" Height="450" Width="800" FontSize="15">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <!--Блок хедер-->
        <TextBlock Text="Компания Рик и Морти" 
           Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" 
           Background="LightBlue" TextAlignment="Center"/>
        <Image Margin="20" Source="C:\Users\tsebr\OneDrive\Рабочий стол\тест.jpg" 
           Grid.Column="5" Grid.Row="1"  Grid.ColumnSpan="2" Grid.RowSpan="2" 
           x:Name="Logo"/>
        <TextBlock Text="Имя Пользователя" 
           Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="2" 
           Background="LightBlue" TextAlignment="Center" HorizontalAlignment="Right"/>
        <TextBlock Text="Id пользователя" 
           Grid.Column="7" Grid.Row="2" Grid.ColumnSpan="2" 
           TextAlignment="Center"
           FontSize="10" HorizontalAlignment="Right"/>
        <!--Блок и информацией о компании-->
        <ListView Grid.Row="3" Name="LViewThours" Grid.ColumnSpan="5" Grid.RowSpan="12">
            <Border Background="LightBlue">
                <StackPanel Grid.Column="1" Grid.Row="2" Grid.RowSpan="12" Grid.ColumnSpan="3" Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Полное название организации" FontSize="12" TextWrapping="Wrap" Margin="0 0 10 0"/>
                        <Border>
                            <TextBox TextWrapping="Wrap" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2">ООО "Рога и копыта"</TextBox>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Краткое наименование" FontSize="12" TextWrapping="Wrap" Margin="0 0 10 0"/>
                        <TextBox TextWrapping="Wrap">РИК</TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Mails" FontSize="12" TextWrapping="Wrap" Margin="0 0 10 0"/>
                        <TextBox TextWrapping="Wrap">mail@smetarik.ru</TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="ИНН" FontSize="12" TextWrapping="Wrap" Margin="0 0 10 0"/>
                        <TextBox TextWrapping="Wrap">9731016002</TextBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </ListView>
        <!--Блок с историей взаимодействия-->
        <DockPanel Grid.Column="6" Grid.Row="6" Background="LightCoral" Grid.ColumnSpan="3" Grid.RowSpan ="9" Margin="5 5 5 5">

            <Border Margin="5 5 5 5" BorderBrush="Black" BorderThickness="2">

                <StackPanel>
                    <TextBlock x:Name="HistoriBlock" Margin="5" TextWrapping="Wrap" Text = "Тут некая история работы с компанией"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBox TextWrapping="Wrap" x:Name="HistoriBox" Text="Введите сообщение"/>
                        <Button x:Name="HistoriButton" BorderBrush="Black" Background="LightBlue" BorderThickness="2" Margin="20 5 5 5" Click="Button_Click">отправить</Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DockPanel>
    </Grid>
</Window>

