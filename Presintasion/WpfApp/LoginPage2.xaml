<Page x:Class="WpfApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="450"
      Title="LoginPage"
      Height="300" Width="450"
      Background="AliceBlue"
      FontSize="28">
    <Border Margin="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Заголовок-->
            <TextBlock Text="Авторизация" Grid.ColumnSpan="2" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            <!--Логин-->
            <TextBlock Text="Логин:"  HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       Grid.Row="1"
                       Margin="5 5 25 5"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Padding="2"/>
            <!--Пароль-->
            <TextBlock Text="Пароль:" HorizontalAlignment="Right" 
                       VerticalAlignment="Center" 
                       Grid.Row="2"
                       Margin="5 5 5 5"
                       Padding="2"/>
            <PasswordBox Grid.Row="2" Grid.Column="2" Margin="5" Padding="2"/>
            <!--Кнопка-->
            <Button Content="Авторизация" Grid.Row="3" Grid.ColumnSpan="2"
                    Margin="80 10 80 2" IsDefault="True" Click="Button_Click"/>
        </Grid>
    </Border>
</Page>
