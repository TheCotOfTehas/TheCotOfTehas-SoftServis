<Window x:Class="WpfApp.Lesson3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Lesson3" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="78*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="15"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <StackPanel Margin="5 5 5 5">
                <Border BorderBrush="Black" BorderThickness="2" Margin="5 0 5 5">
                    <StackPanel>
                        <TextBlock Margin="5 5 5 5"/>
                        <TextBlock Margin="5 5 5 5"/>
                        <Button Content="Кнопка" Margin="5 5 5 5"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" Margin="5 5 5 5">
                <TextBlock Text="Панель Ввода   "/>
                <ScrollViewer>
                    <TextBox TextWrapping="Wrap"/>
                </ScrollViewer>
            </DockPanel>
            <DockPanel>
                
            </DockPanel>
            <DockPanel Grid.Row="1" Margin="5 5 5 5">
                <TextBlock Text="Панель Вывода"/>
                <ScrollViewer>
                    <TextBox TextWrapping="Wrap" />
                </ScrollViewer>
            </DockPanel>
        </Grid>
        <DockPanel Grid.Column="1" Grid.Row="1">
            <TextBlock Text="Панель управления" DockPanel.Dock="Top" Margin="15 5 5 5"/>
        </DockPanel>
    </Grid>
</Window>
